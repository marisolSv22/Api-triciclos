<div class="block mx-auto my-12 p-8 bg-white w-2/6 border border-gray-200 rounded-lg shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">REGISTER EVENT</h1>

  <form action="" method="POST" class="mt-4">

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="nombre" name="nombre" id="nombre" autofocus required>

    <input type="text" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="descripciÃ³n" name="descripcion" id="descripcion" required>

    <select class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" class="form-select chosenestado_id" id="estado_id" name="estado_id" data-placeholder="- Seleccione Estado -"
    onchange="change(this.id 'estado_id')" value="<%= typeof estado_id != 'undefined' ? estado_id : '' %" required>
    <option value="1" >Activo</option>
    <option value="2">Inactivo</option>
    </select>

    <button type="submit" class="rounded-md w-full text-lg text-white font-semibold p-2 my-3"
    style="background:#212121;">Send</button>

    {{#if error}}
        <p class="text-red-500 font-bold text-lg my-3 text-center">{{error}}</p>
    {{/if}}
    
  </form>

</div>